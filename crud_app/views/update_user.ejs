<!--include header-->
<%-include('include/_header')%>
    <!--include header-->


    <!--main section-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"> <i class="fa-solid fa-angles-left"></i> All User</a>
                </div>
            </div>
            <div class="form_title text_center">
                <h2 class="text_dark"> Update User</h2>
                <span class="text_light">User the below form to update an account</span>
            </div>
            <!-- form handeling -->
            <form method="POST" id="update_user">

                <div class="new_user">

                    <div class="form-group">

                        <label for="name" class="text-light">Name</label>

                        <input type="hidden" name="id" value="<%= users._id %>">

                        <input type="text" name="name" value="<%= users.name %>" placeholder="Mark Stoenis">

                    </div>

                    <div class="form-group">

                        <label for="email" class="text-light">Email</label>

                        <input type="text" name="email" value="<%= users.email %>" placeholder="example@gmail.com">

                    </div>

                    <div class="form-group1">

                        <label for="gender" class="text-light">Gender</label>

                        <div class="radio inline">

                            <input type="radio" id="radio-1" name="gender" value="Male"<%= users.gender==='Male' ? 'checked' : '' %>>

                            <label for="radio-1" class="radio-label">Male</label>

                        </div>

                        <div class="radio inline">

                            <input type="radio" id="radio-2" name="gender" value="Female"<%= users.gender==='Female' ? 'checked' : '' %>>

                            <label for="radio-2" class="radio-label">Female</label>

                        </div>

                    </div>

                    <div class="form-group1">

                        <label for="gender" class="text-light">Status</label>

                        <div class="radio inline">

                            <input type="radio" id="radio-3" name="status" value="Active"<%= users.status==='Active' ? 'checked' : '' %>>

                            <label for="radio-3" class="radio-label">Active</label>

                        </div>

                        <div class="radio inline">

                            <input type="radio" id="radio-4" name="status" value="Inactive"<%= users.status==='Inactive' ? 'checked' : '' %>>

                            <label for="radio-4" class="radio-label">Inactive</label>

                        </div>

                    </div>

                    <div class="form-group">
                        <button id="updateUserBtn" type="submit" class="btn text_dark update">Save</button>

                    </div>

                </div>

            </form>
        </div>
    </main>
    <!--main section-->





    <!--include footer-->
    <%-include('include/_footer')%>
        <!--include footer-->